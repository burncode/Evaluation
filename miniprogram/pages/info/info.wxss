/* @import "../../wxParse/wxParse.wxss"; */
.container {
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
}

.title {
  width: 100%;
  display: flex;
	font-size: 14pt;
  justify-content: center;
}

.header {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between; /*左右*/
}

.author {
  color:#888;
  font-size: 11pt;
}

.tuijian {
  background-color: #ff3300;
  font-size: 13pt;
  padding: 15rpx;
  color: white;
	font-weight: bold;

}

.image {
  margin-top: 30rpx;
  height: 500rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}

.img {
  width: 100%;
  height: 100%;
}

.content {
  margin-top: 30rpx;	
	padding: 50rpx 30rpx;		
	margin-bottom: 30rpx;
}


.icon{	
	background-color: #eee;
	right: 0;
	bottom: 0;
	width: 100%;
	display: flex;
	position: fixed;
	justify-content: flex-end;
	margin-top: 30rpx;
	padding: 0 20rpx;
}
